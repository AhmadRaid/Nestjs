{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@views": ["src/views"],
      "@shared/*": ["src/shared/*"],
      "@modules/*": ["src/modules/*"],
      "@config": ["src/shared/config"],
      "@filters": ["src/shared/filters"],
      "@decorator": ["src/shared/decorator"],
      "@interfaces": ["src/shared/interfaces"],
      "@decorators": ["src/shared/decorators"],
      "@pagexa/module-core": ["plugins/module-core"],
      "@pagexa/module-data": ["plugins/module-data"],
      "@externalServices/*": ["src/external-services/*"],
      "@pagexa/module-common": ["plugins/module-common"],
      "@pagexa/module-network": ["plugins/module-network"],
      "@pagexa/module-common-extend": ["src/shared/services"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tmp", "dist"]
}
